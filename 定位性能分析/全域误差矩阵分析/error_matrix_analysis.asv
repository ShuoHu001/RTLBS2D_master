clear,clc;
data = load("errormatrix.txt");
xmin = min(data(:,1));
xmax = max(data(:,1));
ymin = min(data(:,2));
ymax = max(data(:,2));
gap = data(2,1) - data(1,1);
x=xmin:gap:xmax;
y=ymin:gap:ymax;
[x,y]=meshgrid(x,y);
max_dis=data(:,3);
mean_dis=data(:,4);
max_dis_matrix=reshape(max_dis,size(x));
mean_dis_matrix=reshape(mean_dis,size(x));
figure();
surf(x,y,max_dis_matrix)
